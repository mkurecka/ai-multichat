{% extends 'base.html.twig' %}

{% block title %}Log In!{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="w-full max-w-md px-8 py-8 mt-4 text-left bg-white shadow-xl rounded-xl transition-all duration-300 hover:shadow-2xl">
        <h3 class="text-2xl font-bold text-center text-gray-800 mb-6">Login to Your Account</h3>

        {# Display any flash errors (e.g., from authentication failure) #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mt-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded-lg" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="mt-8 text-center">
            <a href="{{ path('connect_google') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:-translate-y-1">
                {# Google Icon #}
                <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
                </svg>
                Login with Google
            </a>
        </div>

        <div class="mt-8 text-center text-sm text-gray-500">
            <p>By logging in, you agree to our Terms of Service and Privacy Policy</p>
        </div>
    </div>
</div>
{% endblock %}
