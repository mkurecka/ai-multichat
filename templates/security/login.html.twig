{% extends 'base.html.twig' %}

{% block title %}Log In!{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg rounded-lg">
        <h3 class="text-2xl font-bold text-center">Login to Your Account</h3>

        {# Display any flash errors (e.g., from authentication failure) #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mt-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="mt-6 text-center">
            <a href="{{ path('connect_google') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
