{% extends 'base_app.html.twig' %}

{% block title %}Prompt Templates{% endblock %}

{% block app_content %} {# Changed block name from content to app_content #}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-semibold text-gray-800 dark:text-gray-200">Prompt Templates</h1>
            {# Link to the new template creation page #}
            <a href="{{ path('app_prompt_template_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-150 ease-in-out">
                Create New Template
            </a>
        </div>

        {# Display flash messages if any #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="bg-{{ label == 'warning' ? 'yellow' : (label == 'error' ? 'red' : 'green') }}-100 border border-{{ label == 'warning' ? 'yellow' : (label == 'error' ? 'red' : 'green') }}-400 text-{{ label == 'warning' ? 'yellow' : (label == 'error' ? 'red' : 'green') }}-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Name
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Description
                        </th>
                         <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Scope
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Model
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Owner
                        </th>
                        <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    {% for template in templates %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                                {{ template.name }}
                            </td>
                            <td class="px-6 py-4 whitespace-normal text-sm text-gray-500 dark:text-gray-400">
                                {{ template.description|default('N/A')|u.truncate(80, '...') }}
                            </td>
                             <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full {{ template.scope == 'private' ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300' : 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' }}">
                                    {{ template.scope|capitalize }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                                {{ template.associatedModel.name|default('N/A') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                                {{ template.owner.email|default('N/A') }} {# Assuming User has getEmail() #}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
                                {# TODO: Add route for view #}
                                <a href="{{ '#' }}" class="text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300">View</a>
                                {# Edit Link - Check permissions inline (or use Voter if complex) #}
                                {% if (template.scope == 'private' and is_granted('EDIT_PRIVATE', template)) or (template.scope == 'organization' and is_granted('ROLE_ORGANIZATION_ADMIN') and template.organization == app.user.organization) %}
                                    <a href="{{ path('app_prompt_template_edit', {'id': template.id}) }}" class="text-yellow-600 hover:text-yellow-900 dark:text-yellow-400 dark:hover:text-yellow-300">Edit</a>
                                {% endif %}
                                {# Delete Form - Check permissions inline #}
                                {% if (template.scope == 'private' and is_granted('DELETE_PRIVATE', template)) or (template.scope == 'organization' and is_granted('ROLE_ORGANIZATION_ADMIN') and template.organization == app.user.organization) %}
                                    <form action="{{ path('app_prompt_template_delete', {'id': template.id}) }}" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this template?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ template.id) }}">
                                        <button type="submit" class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300">Delete</button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400 text-center">
                                No prompt templates found.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
