{% extends 'base_app.html.twig' %}

{% block title %}Edit Prompt Template: {{ prompt_template.name }}{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-semibold text-gray-800 dark:text-gray-200 mb-6">Edit Prompt Template: <span class="font-normal">{{ prompt_template.name }}</span></h1>

        <div class="bg-white dark:bg-gray-800 shadow px-4 py-5 sm:rounded-lg sm:p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                {# Render form fields manually for better Tailwind styling control #}
                <div>
                    {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div>
                    {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                {# Attach Stimulus controller to the parent div #}
                {# Pass the prototype directly to the controller via a data attribute #}
                <div {{ stimulus_controller('form-collection') }}
                     data-prototype="{{ form_widget(form.messages.vars.prototype)|e('html_attr') }}">
                    {# Render the prototype inside a template tag for JS access #}
                    <template data-form-collection-target="prototype">
                        {{ form_widget(form.messages.vars.prototype) }}
                    </template>

                    {{ form_label(form.messages) }} {# Use label defined in form type #}

                    {# Render the collection widget simply, adding the target attribute.
                       Rely on the default theme for rendering items and the container structure. #}
                    {{ form_widget(form.messages, {'attr': {'data-form-collection-target': 'collectionContainer'}}) }}

                    {# Add button - Place it *after* the widget but *inside* the controller scope #}
                    <button type="button" data-action="form-collection#add" class="mt-4 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
                            Add Message
                        </button>
                    {# Removed duplicated closing div for form_widget #}
                    {{ form_errors(form.messages) }}
                     <div class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                        Define the sequence of system, user, and assistant messages. Use {{ '{{user_input}}' }} for the user's current message. Drag to reorder.
                        {# TODO: List available context variables dynamically from PromptTemplateService #}
                    </div>
                </div> {# End of stimulus_controller div #}

                {# Start of associatedModel div #}
                <div>
                    {{ form_label(form.associatedModel, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    {{ form_widget(form.associatedModel) }}
                    {{ form_errors(form.associatedModel) }}
                </div>

                {# Render scope only if the field exists in the form (i.e., user is admin) #}
                {% if form.scope is defined %}
                    <div>
                        {{ form_label(form.scope, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                         <div class="flex flex-col space-y-2">
                             {% for child in form.scope %}
                                <label class="inline-flex items-center">
                                    {{ form_widget(child, {'attr': {'class': 'form-radio h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600'}}) }}
                                    <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">{{ form_label(child) }}</span>
                                </label>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.scope) }}
                    </div>
                {% endif %}

                {# Render the rest of the form fields (e.g., hidden fields, submit button) #}
                {# {{ form_rest(form) }} #}

                <div class="flex justify-between items-center">
                     {# Delete Form - Check permissions #}
                     {% if (prompt_template.scope == 'private' and is_granted('DELETE_PRIVATE', prompt_template)) or (prompt_template.scope == 'organization' and is_granted('ROLE_ORGANIZATION_ADMIN') and prompt_template.organization == app.user.organization) %}
                        <form action="{{ path('app_prompt_template_delete', {'id': prompt_template.id}) }}" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this template?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prompt_template.id) }}">
                            <button type="submit" class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300 text-sm font-medium">Delete Template</button>
                        </form>
                     {% else %}
                         {# Optionally show a disabled button or nothing if user cannot delete #}
                         <span class="text-gray-400 dark:text-gray-500 text-sm">Cannot delete</span>
                     {% endif %}

                    <div class="flex justify-end space-x-3">
                         {# Cancel Button - Gray #}
                         <a href="{{ path('app_prompt_template_index') }}" class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 dark:bg-gray-600 dark:text-gray-200 dark:border-gray-500 dark:hover:bg-gray-500">
                            Cancel
                        </a>
                         {# Update Button - Blue #}
                        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Update Template
                        </button>
                    </div>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
