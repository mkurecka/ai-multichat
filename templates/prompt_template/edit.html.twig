{% extends 'base_settings.html.twig' %}

{% block title %}Edit Prompt Template: {{ prompt_template.name }}{% endblock %}

{% block body_content %} {# Corrected block name #}
<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8"> {# Added container #}
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-semibold text-gray-900">Edit Prompt Template: <span class="text-gray-600">{{ prompt_template.name }}</span></h1>
        <div>
            {# Delete form #}
            <form action="{{ path('app_prompt_template_delete', {'id': prompt_template.id}) }}" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this template?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prompt_template.id) }}">
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    Delete Template
                </button>
            </form>
        </div>
    </div>

    {# TODO: Add section to display available user variables (needs Tailwind styling) #}

    <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6 mt-4">
        {{ include('prompt_template/_form.html.twig', {'button_label': 'Update Template'}) }}
    </div>

    <div class="mt-4">
        <a href="{{ path('app_prompt_template_index') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">
            &larr; Back to list
        </a>
    </div>
</div>
{% endblock %}
