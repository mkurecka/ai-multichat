{% extends 'base.html.twig' %}

{% block title %}AI MultiChat{% endblock %}

{% block body %}
    {% if not app.user %}
        <div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
            <div class="sm:mx-auto sm:w-full sm:max-w-md">
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Welcome to AI MultiChat
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Compare responses from multiple AI models in real-time
                </p>
            </div>

            <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
                <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                    <div class="space-y-6">
                        <div>
                            <h3 class="text-lg font-medium text-gray-900">Features</h3>
                            <ul class="mt-4 space-y-3 text-sm text-gray-600">
                                <li class="flex items-center">
                                    <svg class="h-5 w-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    Compare multiple AI models simultaneously
                                </li>
                                <li class="flex items-center">
                                    <svg class="h-5 w-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    Thread-based conversations
                                </li>
                                <li class="flex items-center">
                                    <svg class="h-5 w-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    Real-time response streaming
                                </li>
                            </ul>
                        </div>

                        <div>
                            <a href="{{ path('app_login') }}" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Sign in with Google
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="flex h-screen bg-gray-100">
            <!-- Sidebar -->
            <div class="w-64 bg-white shadow-lg">
                {% include 'home/_chat_history.html.twig' %}
            </div>

            <!-- Main Content -->
            <div class="flex-1 flex flex-col overflow-hidden">
                <!-- Model Selector -->
                <div class="w-64 bg-white shadow-lg">
                    {% include 'home/_model_selector.html.twig' %}
                </div>

                <!-- Chat Area -->
                <div class="flex-1 overflow-y-auto p-4">
                    {% include 'home/_chat_area.html.twig' %}
                </div>
            </div>
        </div>

        <script>
            // Initialize JWT token
            localStorage.setItem('token', '{{ jwt_token }}');
        </script>
    {% endif %}
{% endblock %}
