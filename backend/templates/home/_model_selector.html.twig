<div class="p-4" data-controller="model-selector">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Select Models</h2>
    <div class="space-y-2" data-model-selector-target="modelList">
        {% for model in models %}
            <div class="flex items-center space-x-2">
                <input type="checkbox" 
                       id="model-{{ model.id }}" 
                       value="{{ model.id }}"
                       class="rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
                       data-action="change->model-selector#toggleModel"
                       {% if model.selected %}checked{% endif %}>
                <label for="model-{{ model.id }}" class="text-sm text-gray-700">
                    {{ model.name }}
                </label>
            </div>
        {% endfor %}
    </div>
    <div class="mt-4">
        <button data-action="click->model-selector#refreshModels" 
                class="w-full bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            Refresh Models
        </button>
    </div>
</div> 